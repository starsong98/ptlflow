    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/infer_warpvis.py",
            "console": "integratedTerminal",
            "args": [
                "raft",
                "--input_path", "datasets_realvideo/DAVIS_SAMPLE",
                "--write_outputs",
                "--output_path", "results/warpvis_debug",
